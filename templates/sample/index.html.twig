        <script>
       // pass the ID of the button we want to add the “click” to.
        $( "#placeorder" ).click(function() {
 // When the button is clicked, this block will run. The purpose of this is to select the
 //“address” text field an grab the value from it. This value is then put into a local variable called //“add”.
          var add = $("#address").val();
          
          alert(add);
          
          // This will POST data to the /putInSession page. “address” is the name of the variable we 
         // are sending and “add” is the variable that contains the value we are sending.
          $.post( "/putInSession", { address: add })
              .done(function( data ) {
               // After the page is called, any content on the page called “putInSession” is grabbed
                // and brought back to us as a variable called “data”
                alert( "Data Loaded: " + data );
              });
        });
        </script>
            
